{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": ".",
    "rootDir": ".",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ],
  "typeRoots": [
    "../node_modules/@types",
    "../node_modules"
  ],
  "types": [
    "core-js",
    "express",
    "jasmine",
    "node",
    "protractor",
    "systemjs"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}